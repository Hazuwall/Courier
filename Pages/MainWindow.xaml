<Window x:Class="Courier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Courier"
        mc:Ignorable="d"
        Title="Робот-курьер" Height="600" Width="600">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Симуляция">
                <MenuItem Header="Начать новую" Command="{Binding NewSimCommand}"/>
                <MenuItem Header="Продолжить" Command="{Binding ContinueSimCommand}"/>
                <MenuItem Header="Остановить" Command="{Binding StopSimCommand}"/>
            </MenuItem>
        </Menu>
        <ItemsControl ItemsSource="{Binding WorldObjects}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Width="500" Height="500"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</Window>
